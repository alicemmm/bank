<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#262a3b" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="转账结果"
            android:textColor="#ffffff"
            android:textSize="@dimen/title" />

        <TextView
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:text="完成"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="30dip"
            android:layout_height="109dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="20dip"
            android:background="@mipmap/result" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="109dip"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="25dip"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="付款成功，已提交银行处理"
                android:textColor="#11af1e"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/yhzh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:text="中国建设银行（4084）"
                android:textColor="#999999" />

            <TextView
                android:id="@+id/je"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:text="100.00元"
                android:textColor="#999999" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:text="预计05-29 23:59前到账" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>